
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/Favicon/logo.ico")" type="image/x-icon" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Css/interfaz.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/Css/reservas.css")">
    <title>Reservas</title>
</head>
<body>
    <div class="main-container">
        <nav class="siderbar">
            <header>
                <div class="image-text">
                    <span class="image">
                        <img src="~/Content/Media/logo.jpg" alt="logo">
                    </span>
                    <div class="text header-text">
                        <span class="name">NaceTuIdea</span>
                    </div>
                </div>
                <ion-icon name="chevron-forward-outline" class="toggle"></ion-icon>
            </header>
            <div class="menu-bar">
                <div class="menu">
                    <li class="search-box">
                        <ion-icon name="search" class="icon"></ion-icon>
                        <input type="search" placeholder="Buscar...">
                    </li>
                    <ul class="menu-links">
                        <li class="nav-link">
                            <a href="@Url.Action("Dashb","Dashboard")">
                                <ion-icon name="home" class="icon"></ion-icon>
                                <span class="text nav-text">Inicio</span>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a href="@Url.Action("Perfil","Dashboard")">
                                <ion-icon name="person" class="icon"></ion-icon>
                                <span class="text nav-text">Perfil</span>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a href="@Url.Action("Local","Dashboard")">
                                <ion-icon name="storefront" class="icon"></ion-icon>
                                <span class="text nav-text">Locales</span>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a href="@Url.Action("Mensajes","MPR")">
                                <ion-icon name="chatbox" class="icon"></ion-icon>
                                <span class="text nav-text">Mensajes</span>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a href="@Url.Action("Notificaciones","FN")">
                                <ion-icon name="notifications" class="icon"></ion-icon>
                                <span class="text nav-text">Notificaciones</span>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a href="@Url.Action("Favoritos","FN")">
                                <ion-icon name="heart" class="icon"></ion-icon>
                                <span class="text nav-text">Favoritos</span>
                            </a>
                        </li>
                        <li class="nav-link">
                            <a href="@Url.Action("Reservas","MPR")">
                                <ion-icon name="calendar-clear" class="icon"></ion-icon>
                                <span class="text nav-text">Reservas</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="bottom-content">
                    <li class="">
                        <a href="@Url.Action("Principal","Inicio")" id="logoutBtn">
                            <ion-icon name="log-out" class="icon"></ion-icon>
                            <span class="text nav-text">Salir</span>
                        </a>
                    </li>
                    <li class="mode">
                        <div class="moon-sun">
                            <ion-icon name="moon" class="icon moon"></ion-icon>
                            <ion-icon name="sunny" class="icon sun"></ion-icon>
                        </div>
                        <span class="text mode-text">Modo Oscuro</span>
                        <div class="toggle-switch">
                            <span class="switch"></span>
                        </div>
                    </li>
                </div>
            </div>

        </nav>
        <!-- Contenedor principal de reservas -->
        <main class="reservas-main">
            <h1><ion-icon name="calendar-clear-outline"></ion-icon> Tus Reservas</h1>

            <!-- Pestañas -->
            <div class="tabs-container">
                <button class="tab active" data-tab="hechas">
                    <ion-icon name="send-outline"></ion-icon>
                    Reservas Hechas
                </button>
                <button class="tab" data-tab="recibidas">
                    <ion-icon name="download-outline"></ion-icon>
                    Solicitudes Recibidas
                </button>
            </div>

            <!-- Contenido de pestañas -->
            <section id="reservas-hechas" class="tab-content active">
                <div class="reserva-grid" id="hechas-grid">
                    <!-- Tarjetas de reservas hechas generadas dinámicamente -->
                </div>
            </section>

            <section id="reservas-recibidas" class="tab-content">
                <div class="reserva-grid" id="recibidas-grid">
                    <!-- Tarjetas de solicitudes recibidas generadas dinámicamente -->
                </div>
            </section>
        </main>
    </div>
    <script src="@Url.Content("~/Content/Js/interfazmode.js")"></script>
    <script src="@Url.Content("~/Content/Js/reservas.js")"></script>
    <script src="@Url.Content("~/Content/Js/local.js")"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>

